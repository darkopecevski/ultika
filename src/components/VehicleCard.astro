---
// Vehicle Card component to display fleet items

export interface Props {
  name: string;
  type: string; // chauffeur or self-drive
  description: string;
  features: string[];
  capacity: string;
  imageUrl?: string;
}

const { 
  name, 
  type, 
  description, 
  features,
  capacity,
  imageUrl
} = Astro.props;

// Badge color based on type
const badgeColor = type === 'chauffeur' ? 'bg-[#D4AF37] text-black' : 'bg-black text-white';
const badgeText = type === 'chauffeur' ? 'Chauffeur Driven' : 'Self Drive';
---

<div class="vehicle-card overflow-hidden bg-white rounded-lg shadow-md transition-all duration-300 hover:shadow-xl h-full">
  <!-- Vehicle Image -->
  <div class="relative h-64 overflow-hidden">
    {imageUrl ? (
      <img
        src={imageUrl}
        alt={name}
        class="w-full h-full object-cover"
      />
    ) : (
      <div class="placeholder-image w-full h-full flex items-center justify-center bg-gray-200">
        <span class="text-gray-500">Placeholder: 800Ã—600 Vehicle Image</span>
      </div>
    )}

    <!-- Type badge -->
    <div class={`absolute top-4 right-4 ${badgeColor} text-sm font-medium px-3 py-1 rounded-full`}>
      {badgeText}
    </div>
  </div>
  
  <!-- Vehicle Details -->
  <div class="p-6">
    <h3 class="text-2xl font-bold mb-2">{name}</h3>
    
    <p class="text-gray-600 mb-4">{description}</p>
    
    <!-- Vehicle Features -->
    <div class="mb-4">
      <div class="text-sm text-gray-500 mb-2">FEATURES</div>
      <ul class="grid grid-cols-2 gap-2">
        {features.map((feature) => (
          <li class="flex items-center text-sm">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2 text-[#D4AF37]" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
            </svg>
            {feature}
          </li>
        ))}
      </ul>
    </div>
    
    <!-- Capacity -->
    <div class="flex items-center text-sm text-gray-700 border-t pt-4 mt-4">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-gray-500" viewBox="0 0 20 20" fill="currentColor">
        <path d="M13 6a3 3 0 11-6 0 3 3 0 016 0zM18 8a2 2 0 11-4 0 2 2 0 014 0zM14 15a4 4 0 00-8 0v3h8v-3zM6 8a2 2 0 11-4 0 2 2 0 014 0zM16 18v-3a5.972 5.972 0 00-.75-2.906A3.005 3.005 0 0119 15v3h-3zM4.75 12.094A5.973 5.973 0 004 15v3H1v-3a3 3 0 013.75-2.906z" />
      </svg>
      <span>Capacity: {capacity}</span>
    </div>
  </div>
</div>