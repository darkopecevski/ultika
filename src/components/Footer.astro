---
import Logo from './Logo.astro';

// Get current year for copyright
const currentYear = new Date().getFullYear();

// Determine current language
const currentPath = Astro.url.pathname;
const isEnglish = !currentPath.startsWith('/mk');

// Footer links for both languages
const serviceLinks = {
  en: [
    { name: 'Airport Transfers', url: '/services/airport-transfers' },
    { name: 'Executive Transportation', url: '/services/executive-transportation' },
    { name: 'Self-Drive Car Rental', url: '/services/self-drive-rental' },
    { name: 'Wedding Transportation', url: '/services/wedding-transportation' },
    { name: 'Corporate Services', url: '/services/corporate-services' }
  ],
  mk: [
    { name: 'Аеродромски Трансфери', url: '/mk/services/airport-transfers' },
    { name: 'Бизнис Превоз', url: '/mk/services/executive-transportation' },
    { name: 'Изнајмување Возила', url: '/mk/services/self-drive-rental' },
    { name: 'Свадбен Превоз', url: '/mk/services/wedding-transportation' },
    { name: 'Корпоративни Услуги', url: '/mk/services/corporate-services' }
  ]
};

const quickLinks = {
  en: [
    { name: 'Home', url: '/' },
    { name: 'Fleet', url: '/fleet' },
    { name: 'Gallery', url: '/gallery' },
    { name: 'Contact', url: '/contact' },
    { name: 'Policies', url: '/policies' }
  ],
  mk: [
    { name: 'Дома', url: '/mk' },
    { name: 'Флота', url: '/mk/fleet' },
    { name: 'Галерија', url: '/mk/gallery' },
    { name: 'Контакт', url: '/mk/contact' },
    { name: 'Политики', url: '/mk/policies' }
  ]
};

// Social media links (same for both languages)
const socialLinks = [
  { name: 'Facebook', url: 'https://www.facebook.com/ultika.transfers/', icon: 'facebook' },
  { name: 'Instagram', url: 'https://www.instagram.com/ultika_vip_transfers_rentacar/', icon: 'instagram' },
  { name: 'LinkedIn', url: 'https://linkedin.com/', icon: 'linkedin' }
];

// Get current language's links
const currentServiceLinks = serviceLinks[isEnglish ? 'en' : 'mk'];
const currentQuickLinks = quickLinks[isEnglish ? 'en' : 'mk'];
---

<footer class="bg-black text-white pt-12 pb-6">
  <div class="container mx-auto px-4">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 mb-8">
      <!-- Company Info -->
      <div>
        <div class="flex items-center mb-4">
          <Logo color="white" />
          <span class="ml-2 text-xl font-bold">Ultika</span>
        </div>
        <p class="text-gray-400 mb-4">
          {isEnglish 
            ? 'Premium car rental and transportation services in North Macedonia.'
            : 'Премиум услуги за изнајмување автомобили и транспорт во Северна Македонија.'}
        </p>
        <div class="flex space-x-4">
          {socialLinks.map((social) => (
            <a 
              href={social.url} 
              target="_blank" 
              rel="noopener noreferrer"
              class="text-gray-400 hover:text-white transition-colors duration-200"
              aria-label={social.name}
            >
              {social.icon === 'facebook' && (
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M9 8h-3v4h3v12h5v-12h3.642l.358-4h-4v-1.667c0-.955.192-1.333 1.115-1.333h2.885v-5h-3.808c-3.596 0-5.192 1.583-5.192 4.615v3.385z" />
                </svg>
              )}
              {social.icon === 'instagram' && (
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z" />
                </svg>
              )}
              {social.icon === 'linkedin' && (
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M4.98 3.5c0 1.381-1.11 2.5-2.48 2.5s-2.48-1.119-2.48-2.5c0-1.38 1.11-2.5 2.48-2.5s2.48 1.12 2.48 2.5zm.02 4.5h-5v16h5v-16zm7.982 0h-4.968v16h4.969v-8.399c0-4.67 6.029-5.052 6.029 0v8.399h4.988v-10.131c0-7.88-8.922-7.593-11.018-3.714v-2.155z" />
                </svg>
              )}
            </a>
          ))}
        </div>
      </div>
      
      <!-- Services -->
      <div>
        <h3 class="text-lg font-bold mb-4">
          {isEnglish ? 'Our Services' : 'Нашите Услуги'}
        </h3>
        <ul class="space-y-2">
          {currentServiceLinks.map((link) => (
            <li>
              <a 
                href={link.url}
                class="text-gray-400 hover:text-white transition-colors duration-200"
              >
                {link.name}
              </a>
            </li>
          ))}
        </ul>
      </div>
      
      <!-- Quick Links -->
      <div>
        <h3 class="text-lg font-bold mb-4">
          {isEnglish ? 'Quick Links' : 'Брзи Линкови'}
        </h3>
        <ul class="space-y-2">
          {currentQuickLinks.map((link) => (
            <li>
              <a 
                href={link.url}
                class="text-gray-400 hover:text-white transition-colors duration-200"
              >
                {link.name}
              </a>
            </li>
          ))}
        </ul>
      </div>
      
      <!-- Contact Info -->
      <div>
        <h3 class="text-lg font-bold mb-4">
          {isEnglish ? 'Contact Us' : 'Контактирајте Нè'}
        </h3>
        <ul class="space-y-3 text-gray-400">
          <li class="flex items-start">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 mt-0.5 text-[#D4AF37]" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd" />
            </svg>
            <span>{isEnglish ? 'Skopje, North Macedonia' : 'Скопје, Северна Македонија'}</span>
          </li>
          <li class="flex items-start">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 mt-0.5 text-[#D4AF37]" viewBox="0 0 20 20" fill="currentColor">
              <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z" />
            </svg>
            <a href="tel:+38970377925" class="text-gray-400 hover:text-white transition-colors duration-200">+389 70 377 925</a>
          </li>
          <li class="flex items-start">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 mt-0.5 text-[#D4AF37]" viewBox="0 0 20 20" fill="currentColor">
              <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z" />
              <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z" />
            </svg>
            <a href="mailto:ultika.mk@gmail.com" class="text-gray-400 hover:text-white transition-colors duration-200">ultika.mk@gmail.com</a>
          </li>
        </ul>
      </div>
    </div>
    
    <!-- Copyright & Legal -->
    <div class="pt-6 mt-6 border-t border-gray-800 text-center sm:text-left sm:flex sm:justify-between text-sm text-gray-400">
      <p>{isEnglish
        ? `© ${currentYear} Ultika. All rights reserved.`
        : `© ${currentYear} Ultika. Сите права се задржани.`}</p>
      <div class="mt-2 sm:mt-0">
        <a href={isEnglish ? '/privacy-policy' : '/mk/privacy-policy'} class="text-gray-400 hover:text-white transition-colors duration-200 mr-4">
          {isEnglish ? 'Privacy Policy' : 'Политика за Приватност'}
        </a>
        <a href={isEnglish ? '/terms-of-service' : '/mk/terms-of-service'} class="text-gray-400 hover:text-white transition-colors duration-200">
          {isEnglish ? 'Terms of Service' : 'Услови за Користење'}
        </a>
      </div>
    </div>
  </div>
</footer>