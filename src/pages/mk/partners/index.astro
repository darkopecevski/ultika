  lang="mk"
>
  <!-- Hero Section -->
  <section class="bg-black text-white py-20">
    <div class="container mx-auto px-4 text-center">
      <h1 class="text-4xl md:text-5xl font-bold mb-6">Нашите Партнери</h1>
      <p class="text-xl text-gray-300 max-w-3xl mx-auto">
        Соработуваме со водечки хотели, бизниси и туристички организации за да обезбедиме исклучителни транспортни услуги низ цела Северна Македонија.
      </p>
    </div>
  </section>
  
  <!-- Partnership Benefits -->
  <section class="section py-20">
    <div class="container mx-auto px-4">
      <SectionTitle
        title="Придобивки од Партнерството"
        subtitle="Зошто да станете партнер со Ultika"
      />
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mt-12">
        {partnershipBenefits.map(benefit => (
          <div class="bg-white p-8 rounded-lg shadow-md text-center">
            <div class="text-[#D4AF37] mb-4 mx-auto" set:html={icons[benefit.icon]} />
            <h3 class="text-xl font-bold mb-2">{benefit.title}</h3>
            <p class="text-gray-600">{benefit.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>
  
  <!-- Hotel Partners -->
  <section class="section py-20 bg-gray-50">
