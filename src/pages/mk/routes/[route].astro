---
import MainLayout from '../../../layouts/MainLayout.astro';
import SectionTitle from '../../../components/SectionTitle.astro';
import { routes, destinations, getDestination, getRoute, createRouteSlug } from '../../../data/routes';

export async function getStaticPaths() {
  // Generate pages for all possible destination combinations
  const allRoutes = [];

  destinations.forEach(from => {
    destinations.forEach(to => {
      if (from.id !== to.id) {
        const routeInfo = getRoute(from.id, to.id);

        allRoutes.push({
          params: {
            route: createRouteSlug(from.id, to.id)
          },
          props: {
            routeInfo: routeInfo || {
              from: from.id,
              to: to.id,
              distance: 'Контактирајте за детали',
              duration: 'Контактирајте за детали',
              pricing: {}
            },
            fromDestination: from,
            toDestination: to
          }
        });
      }
    });
  });

  return allRoutes;
}

const { routeInfo, fromDestination, toDestination } = Astro.props;

const pageTitle = `${fromDestination.nameMk} до ${toDestination.nameMk} Трансфер`;
const pageDescription = `Премиум шофер услуга од ${fromDestination.nameMk} до ${toDestination.nameMk}. ${routeInfo.distance} патување со луксузни Mercedes возила. Професионални возачи, удобно патување.`;
