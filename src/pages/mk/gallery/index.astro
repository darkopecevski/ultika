>
  <!-- Hero Section -->
  <section class="bg-black text-white py-20">
    <div class="container mx-auto px-4 text-center">
      <h1 class="text-4xl md:text-5xl font-bold mb-6">Нашата Галерија</h1>
      <p class="text-xl text-gray-300 max-w-3xl mx-auto">
        Прегледајте ја нашата колекција на слики кои ја прикажуваат нашата премиум флота, транспортни услуги и прекрасните локации кои ги опслужуваме во Северна Македонија.
      </p>
    </div>
  </section>
  
  <!-- Gallery Section -->
  <section class="section py-20">
    <div class="container mx-auto px-4">
      <!-- Filter Categories -->
      <div class="flex flex-wrap justify-center gap-4 mb-12">
        {categories.map(category => (
          <button 
            class="filter-btn px-6 py-2 rounded-full border border-gray-300 hover:border-black transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-black"
            data-category={category.id}
          >
            {category.name}
          </button>
        ))}
      </div>
      
      <!-- Gallery Grid -->
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8" id="gallery-grid">
        {galleryItems.map(item => (
          <div class="gallery-item" data-category={item.category}>
            <div class="relative overflow-hidden rounded-lg shadow-md group h-72">
                <!-- Gallery Thumbnail Image -->
                <img
                  src={item.thumbnail}
                  alt={item.title}
                  class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                  loading="lazy"
                />

              <!-- Overlay -->
              <div class="absolute inset-0 bg-black bg-opacity-60 opacity-0 group-hover:opacity-100 flex flex-col justify-end p-6 transition-opacity duration-300">
                <h3 class="text-white text-xl font-bold">{item.title}</h3>
                <p class="text-gray-300 mt-2">{item.description}</p>
                <button
                  class="mt-4 px-4 py-2 bg-[#D4AF37] text-black rounded-full text-sm font-medium hover:bg-opacity-90 transition-colors duration-200 view-image-btn"
                  data-image={item.fullImage}
                  data-title={item.title}
                  data-description={item.description}
                >
                  Погледнете Слика
